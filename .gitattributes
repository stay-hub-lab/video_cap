* text=auto

# Prefer LF for source files
*.sh text eol=lf
*.tcl text eol=lf
*.py text eol=lf
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.v text eol=lf
*.sv text eol=lf
*.vh text eol=lf
*.xdc text eol=lf
*.md text eol=lf

# Keep Windows scripts as CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf
